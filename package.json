{
  "name": "backend-template",
  "version": "1.0.0",
  "description": "Robust and scalable backend server template with NodeJS, TypeScript",
  "main": "dist/server.js",
  "scripts": {
    "install:pkg": "pnpm install --frozen-lockfile",
    "preinstall": "npx only-allow pnpm",
    "start": "node dist/server.js",
    "dev": "tsx watch --clear-screen=false --include './src/**/*' -r tsconfig-paths/register src/server.ts",
    "dev:n": "console-ninja pnpm dev",
    "build": "tsc && tsc-alias",
    "type:check": "tsc --noEmit",
    "lint:fix": "eslint --max-warnings 0 --fix",
    "lint:check": "eslint",
    "format": "prettier --log-level warn --write \"./**/*.{js,mjs,cjs,ts,d.ts,mts,json,yaml,yml,html}\"",
    "lint": "pnpm format && pnpm lint:fix",
    "test": "vitest run",
    "test:w": "vitest --watch",
    "coverage": "vitest run --coverage",
    "docker": "docker compose up --build -d",
    "docker-stage": "docker compose -f docker-compose.stage.yml up --build -d",
    "docker-dev": "docker compose -f docker-compose.dev.yml up --build",
    "docker:sh": "docker exec -it template-server sh",
    "docker-stage:sh": "docker exec -it template-server-stage sh",
    "docker-dev:sh": "docker exec -it template-server-dev sh",
    "redis-cli": "docker exec -it redis redis-cli",
    "lint-staged": "lint-staged",
    "prepare": "husky || true"
  },
  "keywords": [],
  "author": "Saiful Islam Sojib",
  "license": "ISC",
  "packageManager": "pnpm@10.11.0",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "http-status": "^2.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.15.0",
    "multer": "^2.0.0",
    "pino": "^9.7.0",
    "pino-http": "^10.4.0",
    "pino-pretty": "^13.0.0",
    "redis": "^5.0.1",
    "zod": "^3.25.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.27.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.15.19",
    "@types/supertest": "^6.0.3",
    "@vitest/eslint-plugin": "^1.2.0",
    "eslint": "^9.27.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.3.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.4.0",
    "globals": "^16.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "mongodb-memory-server": "^10.1.4",
    "prettier": "^3.5.3",
    "supertest": "^7.1.1",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "vitest": "^3.1.4"
  },
  "engines": {
    "node": ">=22",
    "npm": ">=10",
    "pnpm": ">=10"
  },
  "lint-staged": {
    "*.{js,mjs,cjs,ts,d.ts,mts}": "eslint --max-warnings 0 --fix",
    "*.{js,mjs,cjs,ts,d.ts,mts,json,yaml,yml,html}": "prettier --log-level warn --write"
  }
}
