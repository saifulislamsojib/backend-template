{
  "name": "backend-template",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "start": "node dist/server.js",
    "dev": "nodemon --exec \"nodemon -r tsconfig-paths/register\" src/server.ts",
    "build": "tsc && tsc-alias",
    "type:check": "tsc --noEmit",
    "fix": "eslint ./src --ext .ts --quiet --fix --ignore-path ./.gitignore",
    "lint:check": "eslint ./src --ext .ts --ignore-path ./.gitignore",
    "format": "prettier  --log-level warn --write \"./**/*.{ts,md,json,d.ts}\"",
    "lint": "pnpm format && pnpm fix",
    "test": "NODE_ENV=test jest",
    "test:w": "NODE_ENV=test jest --watch",
    "prepare": "husky || true"
  },
  "keywords": [],
  "author": "Saiful Islam Sojib",
  "license": "ISC",
  "packageManager": "pnpm@9.4.0",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "http-status": "^1.7.4",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.4.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.2",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-jest": "^28.6.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "mongodb-memory-server": "^9.4.0",
    "nodemon": "^3.1.3",
    "prettier": "^3.3.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=20",
    "npm": ">=10",
    "pnpm": ">=9"
  },
  "lint-staged": {
    "*.ts": "eslint --quiet --fix",
    "*.{ts,md,json,d.ts}": "prettier  --log-level warn --write"
  }
}
