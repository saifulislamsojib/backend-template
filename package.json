{
  "name": "backend-template",
  "version": "1.0.0",
  "description": "Robust and scalable backend server template with NodeJS, TypeScript",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "install:pkg": "pnpm install --frozen-lockfile",
    "preinstall": "npx only-allow pnpm",
    "start": "node --env-file=.env dist/server.js",
    "dev": "tsx watch --clear-screen=false --include './src/**/*' --env-file=.env src/server.ts",
    "dev:node": "node --import 'data:text/javascript,import { register } from \"node:module\"; import { pathToFileURL } from \"node:url\"; register(\"./.path-resolver.mjs\", pathToFileURL(\"./\"));' --watch --env-file=.env src/server.ts",
    "dev:n": "console-ninja pnpm dev",
    "build": "tsc && tsc-alias",
    "type:check": "tsc --noEmit",
    "lint": "eslint --max-warnings 0 --fix",
    "lint:check": "eslint",
    "format": "prettier --log-level warn --write \"./**/*.{js,cjs,ts,d.ts,json,yaml,yml,html}\"",
    "test": "vitest run",
    "test:w": "vitest --watch",
    "coverage": "vitest run --coverage",
    "docker": "docker compose up --build -d",
    "docker-stage": "docker compose -f docker-compose.stage.yml up --build -d",
    "docker-dev": "docker compose -f docker-compose.dev.yml up --build",
    "docker:sh": "docker exec -it template-server sh",
    "docker-stage:sh": "docker exec -it template-server-stage sh",
    "docker-dev:sh": "docker exec -it template-server-dev sh",
    "redis-cli": "docker exec -it redis redis-cli",
    "lint-staged": "lint-staged",
    "prepare": "husky || true"
  },
  "keywords": [],
  "author": "Saiful Islam Sojib",
  "license": "ISC",
  "packageManager": "pnpm@10.18.1",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "http-status": "^2.1.0",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.2.1",
    "multer": "^2.0.2",
    "pino": "^10.3.1",
    "pino-http": "^11.0.0",
    "redis": "^5.10.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@stack-lint/base": "^0.0.13",
    "@stack-lint/node": "^0.0.13",
    "@stack-lint/typescript": "^0.0.13",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.13",
    "@types/supertest": "^6.0.3",
    "@vitest/eslint-plugin": "^1.6.9",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "mongodb-memory-server": "^11.0.1",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.1",
    "supertest": "^7.2.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=22",
    "npm": ">=10",
    "pnpm": ">=10"
  },
  "lint-staged": {
    "*.{js,cjs,ts,d.ts}": [
      "eslint --max-warnings 0 --fix",
      "vitest related --run"
    ],
    "*.{js,cjs,ts,d.ts,json,yaml,yml,html}": "prettier --log-level warn --write"
  }
}
