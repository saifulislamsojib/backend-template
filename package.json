{
  "name": "backend-template",
  "version": "1.0.0",
  "description": "Robust and scalable backend server template with NodeJS, TypeScript",
  "main": "dist/server.js",
  "scripts": {
    "install:pkg": "pnpm install --frozen-lockfile",
    "preinstall": "npx only-allow pnpm",
    "start": "node dist/server.js",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/server.ts",
    "dev:d": "ts-node-dev -r tsconfig-paths/register --poll --respawn --transpile-only src/server.ts",
    "build": "tsc && tsc-alias",
    "type:check": "tsc --noEmit",
    "lint:fix": "eslint --max-warnings 0 --fix",
    "lint:check": "eslint",
    "format": "prettier --log-level warn --write \"./**/*.{js,mjs,cjs,ts,d.ts,json}\"",
    "lint": "pnpm format && pnpm lint:fix",
    "test": "vitest run",
    "test:w": "vitest --watch",
    "coverage": "vitest run --coverage",
    "docker": "docker compose up --build -d",
    "docker-stage": "docker compose -f docker-compose.stage.yml up --build -d",
    "docker-dev": "docker compose -f docker-compose.dev.yml up --build",
    "docker:sh": "docker exec -it template-server sh",
    "docker-stage:sh": "docker exec -it template-server-stage sh",
    "docker-dev:sh": "docker exec -it template-server-dev sh",
    "redis": "docker run -d --name redis-stack-server -p 6379:6379 redis/redis-stack-server:latest",
    "redis-cli": "docker exec -it redis-stack-server redis-cli",
    "lint-staged": "lint-staged",
    "prepare": "husky || true"
  },
  "keywords": [],
  "author": "Saiful Islam Sojib",
  "license": "ISC",
  "packageManager": "pnpm@9.12.0",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.0.1",
    "http-status": "^1.7.4",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.7.1",
    "pino": "^9.5.0",
    "pino-http": "^10.3.0",
    "pino-pretty": "^11.3.0",
    "redis": "^4.7.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@commitlint/types": "^19.5.0",
    "@eslint/js": "^9.12.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.7.6",
    "@types/supertest": "^6.0.2",
    "@vitest/eslint-plugin": "^1.1.7",
    "eslint": "^9.12.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.11.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "mongodb-memory-server": "^10.1.2",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.9.0",
    "vitest": "^2.1.3"
  },
  "engines": {
    "node": ">=20",
    "npm": ">=10",
    "pnpm": ">=9"
  },
  "lint-staged": {
    "*.{js,mjs,cjs,ts,d.ts}": "eslint --max-warnings 0 --fix",
    "*.{js,mjs,cjs,ts,d.ts,json}": "prettier --log-level warn --write"
  }
}
