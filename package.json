{
  "name": "backend-template",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "start": "node dist/server.js",
    "dev": "nodemon --exec \"nodemon -r tsconfig-paths/register\" src/server.ts",
    "build": "tsc && tsc-alias",
    "type:check": "tsc --noEmit",
    "fix": "eslint ./src --ext .ts --quiet --fix",
    "lint:check": "eslint ./src --ext .ts",
    "format": "prettier  --log-level warn --write \"./**/*.{ts,json,d.ts}\"",
    "lint": "pnpm format && pnpm fix",
    "test": "jest",
    "test:w": "jest --watch",
    "docker": "docker compose up -d",
    "docker-stage": "docker compose -f docker-compose-stage.yml up -d",
    "docker:sh": "docker exec -it backend sh",
    "docker-stage:sh": "docker exec -it backend_stage sh",
    "lint-staged": "lint-staged",
    "prepare": "husky || true"
  },
  "keywords": [],
  "author": "Saiful Islam Sojib",
  "license": "ISC",
  "packageManager": "pnpm@9.11.0",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "http-status": "^1.7.4",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.6.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.13",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.5.5",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-jest": "^28.8.3",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "mongodb-memory-server": "^10.0.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=20",
    "npm": ">=10",
    "pnpm": ">=9"
  },
  "lint-staged": {
    "*.{ts,d.ts}": "eslint --quiet --fix",
    "*.{ts,json,d.ts}": "prettier  --log-level warn --write"
  }
}
